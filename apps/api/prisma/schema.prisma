// Prisma schema synced with existing dental-clinic database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userid        BigInt  @id @default(autoincrement())
  username      String  @unique
  passwordhash  String
  role          String  @db.VarChar(50)
  accesscontrol Json?   @default("[]")
  isdeleted     Boolean @default(false)
  tokenversion  Int     @default(1)

  // Relations
  doctor       Doctor?
  receptionist Receptionist?
  pharmacist   Pharmacist?
  assistant    Assistant?

  @@map("users")
}

model Doctor {
  doctorid       BigInt  @id @default(autoincrement())
  userid         BigInt  @unique
  name           String
  specialization String
  phone          String? @db.VarChar(20)
  email          String  @unique
  schedule       Json?
  isdeleted      Boolean @default(false)

  user         User          @relation(fields: [userid], references: [userid], onDelete: Cascade)
  assistants   Assistant[]
  appointments Appointment[]

  @@map("doctors")
}

model Receptionist {
  receptionistid BigInt  @id @default(autoincrement())
  userid         BigInt  @unique
  name           String
  phone          String? @db.VarChar(20)
  isdeleted      Boolean @default(false)

  user         User          @relation(fields: [userid], references: [userid], onDelete: Cascade)
  appointments Appointment[]

  @@map("receptionists")
}

model Pharmacist {
  pharmacistid BigInt  @id @default(autoincrement())
  userid       BigInt  @unique
  name         String
  phone        String? @db.VarChar(20)
  isdeleted    Boolean @default(false)

  user User @relation(fields: [userid], references: [userid], onDelete: Cascade)

  @@map("pharmacists")
}

model Assistant {
  assistantid BigInt  @id @default(autoincrement())
  userid      BigInt  @unique
  doctorid    BigInt
  name        String
  phone       String? @db.VarChar(20)
  isdeleted   Boolean @default(false)

  user   User   @relation(fields: [userid], references: [userid], onDelete: Cascade)
  doctor Doctor @relation(fields: [doctorid], references: [doctorid])

  @@map("assistants")
}

model Patient {
  patientid      BigInt    @id @default(autoincrement())
  name           String
  dateofbirth    DateTime? @db.Date
  gender         String?   @db.VarChar(20)
  phone          String?   @db.VarChar(20)
  address        String?
  medicalhistory String?
  isdeleted      Boolean   @default(false)

  treatments   Treatment[]
  appointments Appointment[]
  attachments  Attachment[]
  billings     Billing[]

  @@map("patients")
}

model Treatment {
  treatmentid BigInt    @id @default(autoincrement())
  patientid   BigInt?
  name        String
  description String?
  status      String?   @default("Active") // Active, Completed, Cancelled
  startdate   DateTime? @default(now()) @db.Timestamptz
  enddate     DateTime? @db.Timestamptz
  isdeleted   Boolean   @default(false)

  patient             Patient?             @relation(fields: [patientid], references: [patientid])
  appointments        Appointment[]
  completedProcedures CompletedProcedure[]

  @@map("treatments")
}

model Appointment {
  appointmentid   BigInt   @id @default(autoincrement())
  patientid       BigInt?
  doctorid        BigInt?
  receptionistid  BigInt?
  treatmentid     BigInt?
  appointmenttime DateTime @db.Timestamptz
  status          String?  @db.VarChar(20) // Scheduled, Completed, Cancelled
  notes           String?
  isdeleted       Boolean  @default(false)

  patient      Patient?      @relation(fields: [patientid], references: [patientid])
  doctor       Doctor?       @relation(fields: [doctorid], references: [doctorid])
  receptionist Receptionist? @relation(fields: [receptionistid], references: [receptionistid])
  treatment    Treatment?    @relation(fields: [treatmentid], references: [treatmentid])

  completedProcedures CompletedProcedure[]
  attachments         Attachment[]
  prescriptions       Prescription[]
  billings            Billing[]

  @@map("appointments")
}

model CompletedProcedure {
  procid        BigInt   @id @default(autoincrement())
  appointmentid BigInt
  treatmentid   BigInt?
  name          String
  cost          Decimal? @db.Decimal(10, 2)
  notes         String?
  isdeleted     Boolean  @default(false)

  appointment Appointment @relation(fields: [appointmentid], references: [appointmentid])
  treatment   Treatment?  @relation(fields: [treatmentid], references: [treatmentid])

  @@map("completedprocedures")
}

model Attachment {
  attachmentid  BigInt   @id @default(autoincrement())
  appointmentid BigInt
  patientid     BigInt?
  filetype      String?  @db.VarChar(50)
  filepath      String
  uploadedat    DateTime @default(now()) @db.Timestamptz
  isdeleted     Boolean  @default(false)

  appointment Appointment @relation(fields: [appointmentid], references: [appointmentid])
  patient     Patient?    @relation(fields: [patientid], references: [patientid])

  @@map("attachments")
}

model Prescription {
  prescriptionid BigInt   @id @default(autoincrement())
  appointmentid  BigInt
  date           DateTime @default(now()) @db.Timestamptz
  notes          String?
  isdeleted      Boolean  @default(false)

  appointment       Appointment        @relation(fields: [appointmentid], references: [appointmentid])
  prescriptionItems PrescriptionItem[]

  @@map("prescriptions")
}

model Medicine {
  medicineid         BigInt  @id @default(autoincrement())
  name               String
  quantity           Int     @default(0)
  price              Decimal @db.Decimal(10, 2)
  isdeleted          Boolean @default(false)
  // availabilitystatus is a generated column in DB, don't include here

  prescriptionItems PrescriptionItem[]

  @@map("medicines")
}

model PrescriptionItem {
  prescriptionitemid BigInt  @id @default(autoincrement())
  prescriptionid     BigInt?
  medicineid         BigInt?
  quantity           Int
  dosage             String?

  prescription Prescription? @relation(fields: [prescriptionid], references: [prescriptionid])
  medicine     Medicine?     @relation(fields: [medicineid], references: [medicineid])

  @@map("prescriptionitems")
}

model Billing {
  billingid     BigInt   @id @default(autoincrement())
  appointmentid BigInt
  patientid     BigInt?
  totalamount   Decimal  @db.Decimal(10, 2)
  type          String?  @db.VarChar(10) // Standard, FBR
  paymentstatus String?  @default("Pending") @db.VarChar(20)
  date          DateTime @default(now()) @db.Timestamptz
  isdeleted     Boolean  @default(false)

  appointment Appointment @relation(fields: [appointmentid], references: [appointmentid])
  patient     Patient?    @relation(fields: [patientid], references: [patientid])

  @@map("billing")
}
