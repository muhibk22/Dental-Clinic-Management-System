    },
    "devDependencies": {
        "prettier": "latest",
        "prisma": "^7.1.0",
        "turbo": "latest"
    },
    "packageManager": "npm@10.0.0",
    "dependencies": {
        "@prisma/client": "^7.1.0"
    }
}
